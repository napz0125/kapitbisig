												<body class="leading-normal tracking-normal text-black " style="font-family: 'Source Sans Pro', sans-serif;">
													<%- include('layouts/navbar'); -%>
													<div class="pt-24">
														<div class="container">
															<div class="row"></div>
														</div>
														<div class="row">
															<h2 class="wow bounceInUp animated lead "></h2>
															<div id="exTab3" class="container">
																<ul  class="nav nav-pills">
																	<li class="color-blue col-lg-4">
																		<a  href="#1b" data-toggle="tab">
																			<i class="fa fa-list"></i><label id="mylisting"> </label>
																		</a>
																	</li>
																	<li class="color-green col-lg-4" id="donorApproved">
																		<a href="#2b" data-toggle="tab">
																			<i class="fa fa-check"></i>Approved Listing 
																		</a>
																	</li>
																	<li class="color-red col-lg-4" id="donorRejected">
																		<a href="#3b" data-toggle="tab">
																			<i class="fa fa-warning"></i>Rejected Listing 
																		</a>
																	</li>
																</ul>
																<div class="tab-content clearfix">
																	<div class="tab-pane active text-black" id="1b">
																		<h3>Hello Hello</h3>																                                
                                                                <table id="pending" class="table table-striped table-bordered nowrap" style="width:100%">
                                                                    <input type="hidden" id="userType"  value="<%= userType %>">
                                                                <thead>                                        
                                                                    <tr>
                                                                        <th>Name</th>
                                                                        <th>Email</th>
                                                                        <th>Phone</th>
                                                                        <th>Need Type</th>
                                                                        <th>Address</th>
                                                                        <th>Is Employed?</th>
                                                                        <th>Status</th>
                                                                    </tr>                                        
                                                                </thead>
                                                                <tbody>
                                                                    <% if (mylisting != null) { %>
                                                                    <tr>
                                                                        <input type="hidden" value="<%= mylisting._id %>">
                                                                        <td><%= mylisting.userinfo.firstname  + ' ' + mylisting.userinfo.lastname %></td>
                                                                        <td><%= mylisting.userinfo.email %></td>
                                                                        <td><%= mylisting.userinfo.phone %></td>
                                                                        <td><%= mylisting.needtype %></td>
                                                                        <td><%= mylisting.userinfo.address   %></td>
                                                                        <td><%= mylisting.isemployed === true ? "Yes": "No" %></td>
                                                                        <td>
                                                                            <% if(mylisting.status===3) { %>
                                                                            <a type="button" class="btn btn-info" name="update" data-user-id="<%= mylisting.userinfo._id %>" data-record-id="<%= mylisting._id %>"
                                                                            id="btnUpdate" data-toggle="modal" href="/detail/<%= mylisting._id%>"">Pending Review</a>     
                                                                            <% } %>   

                                                                            <% if(mylisting.status==5) { %>
                                                                            <a type="button" class="btn btn-info" name="update" data-user-id="<%= mylisting.userinfo._id %>" data-record-id="<%= mylisting._id %>"
                                                                                id="btnUpdate" data-toggle="modal" href="/detail/<%= mylisting._id%>">Under Review</a>  
                                                                                <% } %>                                                                                              
                                                                        </td>
                                                                     
                                                                    </tr>                 
                                                                    <% } %> 
                                                                </tbody>                                       
                                                            </table>                                                      																			
								 </div>
								    <div class="tab-pane text-black" id="2b">
									    <table id="approved" class="table table-striped table-bordered nowrap" style="width:100%">
                                            <thead>                                        
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Phone</th>
                                                    <th>FB Profile</th>
                                                    <th>Address</th>
                                                    <th>Is Employed?</th>
                                                    <th>Action / Status</th>
                                                </tr>                                        
                                            </thead>
                                            <tbody>
                                            <% if (approved != null && approved.length > 0) { %>
                                              <% for (var i = 0; i < approved.length; i++) { %>
                                                <tr>
                                                    
                                                    <td><%= approved[i].userinfo.firstname  + ' ' + approved[i].userinfo.lastname %></td>
                                                    <td><%= approved[i].userinfo.email %></td>
                                                    <td><%= approved[i].userinfo.phone %></td>
                                                    <td><%= approved[i].userinfo.fbprofile %></td>
                                                    <td><%= approved[i].userinfo.address   %></td>
                                                    <td><%= approved[i].isemployed === true ? "Yes": "No" %></td>
                                                    <td>                                                      
                                                       <a type="button" class="btn btn-info" name="approvedview" 
                                                        id="btnView" data-toggle="modal" href="/detail/<%= approved[i]._id%>">Approved</a>                                                                                                                                                                                                                    
                                                  </td>                                                    
                                                </tr>                 
                                                <% } %>   
                                            <% } %> 
                                            </tbody>                                       
                                        </table>     
                                    </div>
                                    
                                    <div class="tab-pane text-black" id="3b">
                                        <table id="rejected" class="table table-striped table-bordered nowrap" style="width:100%">
                                            <thead>                                        
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Phone</th>
                                                    <th>FB Profile</th>
                                                    <th>Address</th>
                                                    <th>Is Employed?</th>
                                                    <th>Action / Status</th>
                                                </tr>                                        
                                            </thead>
                                            <tbody>
                                                <% if (rejected != null) { %>
                                                <% for (var i = 0; i < rejected.length; i++) { %>
                                                <tr>
                                                    <input type="hidden" value="<%= mylisting._id %>">
                                                    <td><%= rejected[i].userinfo.firstname  + ' ' + rejected[i].userinfo.lastname %></td>
                                                    <td><%= rejected[i].userinfo.email %></td>
                                                    <td><%= rejected[i].userinfo.phone %></td>
                                                    <td><%= rejected[i].userinfo.fbprofile %></td>
                                                    <td><%= rejected[i].userinfo.address   %></td>
                                                    <td><%= rejected[i].isemployed === true ? "Yes": "No" %></td>
                                                    <td>                                                      
                                                       <a type="button" class="btn btn-info" name="rejectedView" 
                                                        id="btnView" data-toggle="modal" href="/detail/<%= rejected[i]._id%>">Rejected</a>                                                                                                                                                                                                                    
                                                  </td>                                                    
                                                </tr>                 
                                                <% } %>   
                                                <% } %> 
                                            </tbody>                                       
                                        </table>    
                                </div>
                              </div>
                             
                              <script>
                                $(document).ready(function() {
                                  
                                  $('#pending').DataTable({
                                      responsive: true
                                  });                                                                                       
                                   $('#rejected').DataTable( {
                                        fixedHeader: true,
                                        responsive:true
                                   });
                                   
                                   $('#donorApproved').hide(); 
                                   $('#donorRejected').hide(); 
                                   $("#mylisting").html("My Listing");

                                   var uType = $('#userType').val();  
                                   if(uType != 1)                                   
                                   {
                                    $('#donorApproved').show(); 
                                    $('#donorRejected').show(); 
                                    $("#mylisting").html("My Beneficiary");
                                   }

                                });      

                              </script>
                              <script>                           
                                $(document).on('click','.color-green', function (e) {                                                                      
                                    $('#2b').addClass("active");                                          
                                    if ( !$.fn.dataTable.isDataTable( '#approved' ) ) {
                                        $('#approved').DataTable( {
                                        fixedHeader: true,
                                        responsive:true
                                    }); 
                                 }
                                })                                                                     
                                $(document).on('click','.color-red', function (e) {                                                                      
                                    $('#3b').addClass("active");                                          
                                    if ( !$.fn.dataTable.isDataTable( '#rejected' ) ) {
                                        $('#rejected').DataTable( {
                                        fixedHeader: true,
                                        responsive:true
                                    }); 
                                 }
                                })     
                              </script>
